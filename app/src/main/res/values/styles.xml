<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarStyle -->
    <style name="ButtonBar">
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingRight">2dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:background">@android:color/holo_blue_bright</item>
    </style>

    <!-- Backward-compatible version of ?android:attr/buttonBarButtonStyle -->
    <style name="ButtonBarButton" />

    <style name="TextAppearance.FontPath" parent="android:TextAppearance">
        <item name="fontPath">Lato-Regular.ttf</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TextAppearance.FontPathHeading" parent="android:TextAppearance">
        <item name="fontPath">Ikaros-Regular.otf</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="HeaderText">
        <item name="android:layout_marginLeft">50sp</item>
        <item name="android:background">@android:drawable/bottom_bar</item>
    </style>



    <style name="ErrorMessage" parent="TextAppearance.FontPath">
        <item name="android:layout_marginTop">40dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/holo_red_dark</item>
    </style>

    <style name="Widget.AppCompat.Button.Style">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@color/colorPrimaryDark</item>
    </style>

    <style name="SmallHeaderText" parent="android:Widget.TextView">
        <item name="android:layout_marginRight">50sp</item>
        <item name="android:layout_marginBottom">@dimen/activity_separation_small</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="Background_dark" parent="AppTheme">
        <item name="android:colorBackground">@color/bb_darkBackgroundColor</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondaryInverse">@android:color/secondary_text_light_nodisable</item>
        <item name="android:textColorPrimaryInverse">@color/common_google_signin_btn_text_dark_disabled</item>

        <item name="android:buttonStyle">@style/DarkButtonDefault</item>
    </style>

    <style name="DarkButtonDefault">
        <item name="android:background">@drawable/button_background</item>
    </style>

</resources>
